<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.jamesnuge.fantasyleague.mapper.UserMapper">
    <resultMap id="user" type="User" autoMapping="true">
        <id column="id" property="id" javaType="UserId"/>
    </resultMap>

    <select id="getById">
        SELECT * FROM FANTASY_USER WHERE ID = #{id}
    </select>

    <insert id="insert" parameterType="User" keyProperty="id">
        INSERT INTO FANTASY_USER (
            id,
            first_name,
            last_name,
            password_hash
        ) VALUES (
            #{id},
            #{firstName},
            #{lastName},
            #{passwordHash}
        );
    </insert>

    <select id="getByEmail" resultType="user">
        SELECT id, first_name, last_name, password_hash FROM FANTASY_USER WHERE EMAIL = #{email}
    </select>

</mapper>